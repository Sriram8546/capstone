<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="KICKS Shoes Store Test Suite" verbose="1">

  <!-- ðŸ”¥ ADD THIS LISTENER -->
  <listeners>
    <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
  </listeners>

  <test name="Login and Registration">
    <classes>
      <class name="com.example.LoginRegistrationTests"/>
    </classes>
  </test>

  <test name="Product Search and Listing">
    <classes>
      <class name="com.example.ProductSearchListingTests"/>
    </classes>
  </test>

  <test name="Cart Management">
    <classes>
      <class name="com.example.CartManagementTests"/>
    </classes>
  </test>

  <test name="Order Placement">
    <classes>
      <class name="com.example.OrderPlacementTests"/>
    </classes>
  </test>

  <test name="Payment Processing">
    <classes>
      <class name="com.example.PaymentProcessingTests"/>
    </classes>
  </test>

  <test name="Order History and Tracking">
    <classes>
      <class name="com.example.OrderHistoryTrackingTests"/>
    </classes>
  </test>

</suite>
